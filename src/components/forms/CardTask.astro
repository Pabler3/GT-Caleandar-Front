  }

  .day-btn {
    background: #EAF1F2;
    color: #45B5BC;
    border-radius: 4px;
    cursor: pointer;
    border: none;
    margin-right: 8px;
  }

  .day-btn.active {
    background-color: #2C97A0;
    color: #EAF1F2;
  }

  .monthly-options {
    display: flex;
    flex-wrap: wrap; 
    gap: 8px;
    width: 100%;
    justify-content: center; 
}

.monthly-option {
  padding: 8px 16px;
  border: none;
  background: #EAF1F2;
  border-radius: 4px;
  cursor: pointer;
  color: #45B5BC;
  font-size: 14px;
  font-weight: 500;
  font-family: var(--font-montserrat);
  text-align: center;
  display: flex; 
  align-items: center; 
  justify-content: center;
  white-space: nowrap;
}
.monthly-option:nth-child(-n+4) {
  flex: 1 1 calc(25% - 8px);
  max-width: calc(25% - 8px);
}

.monthly-option:nth-child(n+5) {
  flex: 1 1 calc(33.33% - 8px);
  max-width: calc(33.33% - 8px);
}

  .monthly-option.active {
