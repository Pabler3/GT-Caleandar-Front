    font-family: var(--font-montserrat);
    cursor: pointer;
  }

  .input-date:invalid {
    color: #ADCBCC;
  }

  #dayEnd {
    -webkit-appearance: none;
    -moz-appearance: none;
    background-image: url("icons/icon-arrow.svg");
    background-repeat: no-repeat;
    background-position: right 10px center;
  }

  #dayStar{
    -webkit-appearance: none;
