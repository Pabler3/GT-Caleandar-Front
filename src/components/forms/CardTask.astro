    color: #d7dfe0;
    font-size: 14px;
    font-weight: 500;
    line-height: 24px;
    font-family: var(--font-montserrat);
  }

  .input-title {
    border-radius: 4px;
    background: #fefefe;
    width: 100%;
    padding: 8px;
    font-size: 18px;
    color: #2c97a0;
    font-weight: 600;
    border: none;
    box-sizing: border-box;
    font-family: var(--font-montserrat);
  }
  .input-title::placeholder {
    color: #2c97a0;
    font-size: 18px;
    font-weight: 600;
    line-height: 32px;
    font-family: var(--font-montserrat);
    opacity: 0.4;
  }
  .frequency-container {
    padding: 16px 0px 0px;
    width: 100%;
    max-width: 600px;
  }

  .frequency-buttons {
    display: flex;
    justify-content: space-between;
    gap: 8px;
    width: 100%; 
  }

  .frequency-buttons button {
    font-size: 14px;
    font-weight: 400;
    padding: 8px 4px;
    line-height: 20px;
    font-family: var(--font-montserrat);
    border-radius: 4px;
    border: 1px solid #D7DFE0;
    background: #FEFEFE;
    color: #6B888C;
    display: flex;
    height: 32px;
    align-items: center;
    justify-content: center;
    flex: 1 0 0;
    margin-right: 0;
    opacity: 0.8;
  }

  .frequency-buttons button.active {
    background: #D3E3E4;
    color: #1F636B;
    font-weight: 500;
  }

  .freq-btn {
    padding: 8px 16px;
    border: none;
    background: #EAF1F2;
    border-radius: 4px;
    cursor: pointer;
    font-size: 12px;
    color: #45B5BC;
    margin-right: 8px;
  }

  .freq-btn.active {
    background: #2C97A0;
    color: #EAF1F2;
    border: none;
  }

  .icon {
    display: inline-block;
    transition: transform 0.3s ease;
    margin-left: 8px; 
    width: 20px;
    height: 20px;
  }

  .freq-btn.expanded .icon {
    transform: rotate(90deg);
  }

