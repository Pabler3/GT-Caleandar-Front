    color: #207881;
    font-size: 14px;
    margin-bottom: 12px;
    font-weight: 500;
    font-family: var(--font-montserrat);
  }

  .week-days, .week-frequency {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
  }

  #weekly-options button {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: 500;
    line-height: 16px;
