  }

  .input-participant {
    border-radius: 4px;
    background: #fefefe;
    width: 100%;
    font-size: 14px;
    color: #207881;
    font-weight: 500;
    line-height: 24px;
    padding: 8px;
    border: none;
    font-family: var(--font-montserrat);
    cursor: pointer;
    box-sizing: border-box;
  }

